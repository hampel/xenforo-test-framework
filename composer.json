{
	"name": "hampel/xenforo-test-framework",
	"type": "library",
	"description": "Unit testing framework for XenForo",
	"authors": [{
		"name": "Simon Hampel",
		"email": "simon@hampelgroup.com",
		"role": "Developer"
	}],
	"support": {
		"issues": "https://github.com/hampel/xenforo-test-framework/issues",
		"source": "https://github.com/hampel/xenforo-test-framework"
	},
	"keywords": [
		"xenforo",
		"phpunit",
		"unit testing",
		"testing"
	],
	"homepage": "https://xenforo.com/community/resources/unit-testing-xenforo-addons-tutorial.7508/",
	"license": [
		"MIT"
	],
	"require": {
		"php": ">=8.1.0",
		"phpunit/phpunit": "^8.0|^9.0",
		"mockery/mockery": "^1.0"
	},
    "suggest": {
        "nesbot/carbon": "Gives better control when dealing with time.",
		"league/flysystem-memory": "Required when swapping out filesystems"
    },
	"autoload": {
		"psr-4": {
			"Hampel\\Testing\\": "src/"
		}
	}
}
